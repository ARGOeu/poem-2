#!/usr/bin/env python

import os
import sys
import django
from django.core.management import call_command, CommandError


os.environ['DJANGO_SETTINGS_MODULE'] = 'Poem.settings'
django.setup()


def main():
    args = sys.argv[1:]

    try:
        call_command('api_token', *args)

    except CommandError as exc:
        print(repr(exc.args))
        raise SystemExit(1)


if __name__ == '__main__':
    main()
